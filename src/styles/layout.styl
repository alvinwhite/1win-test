html 
    font-size: 8px;
    cursor: default;
    box-sizing: border-box;

    @media (min-width: $xs) 
        font-size: 9px;
    

    @media (min-width: $xl) 
        font-size: 10px;
    


*,
:after,
:before 
    -webkit-box-sizing: inherit;
    box-sizing: inherit


ol, ul 
    list-style: none;


a 
    color: inherit;
    text-decoration: none;
    &:hover 
        color: inherit;
        text-decoration: none;
        outline: none;
    
    &:focus 
        color: inherit; 
        text-decoration: none;
        outline: none;
    


button, input, textarea 
    &:focus 
        outline: none;
    


input[type=text]::-ms-clear 
    display: none;


button 
    background-color: transparent;
    border: none;
    cursor: pointer;

.page 
    position: relative;
    font-family: $font_main;
    font-size: 1.6rem;
    line-height: 1.25;
    color: $color_text;
    background: #F5F5F5;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;

